@{
    ViewBag.Title = "Home Page";
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="@Url.Content("~/Scripts/knockout-2.2.0.js")"></script>
    <script type="text/javascript">

        function ExhibitionsViewModel()
        {
            var self = this;
            self.exhibitions = ko.observableArray();

            var baseUri = '@ViewBag.ApiUrl';
            $.getJSON(baseUri, self.exhibitions);

        }


        $(document).ready(function () {
            ko.applyBindings(new ExhibitionsViewModel());
        });

        </script>
        }

@section featured {
            <section class="featured">
                <div class="content-wrapper">
                    <div class="float-right">
                        <img src="@Url.Content("~/Images/qrcode.jpeg")" alt="image" width="100" height="100" />
                    </div>

                    <br />
                    <hgroup class="title">
                        
                            <h1>الدليل الافتراضي القائم على استخدام الصور</h1>
                            <br />
                            لتحميل التطبيق الخاص بنظام الاندرويد اضغط
                            @Html.ActionLink("هنا", "Download")
                       
                       
                    </hgroup>
               
                </div>
            </section>
            }

        <h3 class="float-right">:قائمة المعارض</h3>
<div class="float-right">
    <ul id="products" data-bind="foreach: exhibitions">
        <li class="float-right">

            <a data-bind="attr : {'href': '@Url.Action("IndexObject", "home")/' + Id } "><span data-bind="text: $data.Name" class="float-right" /></a>

        </li>
    </ul>
</div>
